<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="company">

	<insert id="insert" parameterType="CompanyVO">
		INSERT INTO TBL_COMPANY
		VALUES(SEQ_COMPANY.NEXTVAL, #{companyName}, #{companyPassword}, #{companyPhone}, #{companyAddress})
	</insert>
	<select id="select" parameterType="CompanyVO" resultType="CompanyVO">
		SELECT ID AS id ,COMPANY_NAME AS companyName
		FROM TBL_COMPANY
		WHERE COMPANY_NAME = #{companyName} AND COMPANY_PASSWORD = #{companyPassword}
	</select>
		<select id="selectIdByCompanyName" parameterType="String" resultType="Long">
		SELECT ID
		FROM TBL_COMPANY
		WHERE COMPANY_NAME = #{companyName}
	</select>









</mapper>