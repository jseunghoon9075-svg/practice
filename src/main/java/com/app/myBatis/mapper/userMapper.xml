<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<insert id="insert" parameterType="UserVO">
		INSERT INTO TBL_USER
		VALUES(SEQ_USER.NEXTVAL, #{userEmail}, #{userPassword}, #{userName}, #{userAge}, #{userPhone}, #{userAddress})
	</insert>
	<select id="select" parameterType="UserVO" resultType="UserVO">
		SELECT ID, USER_EMAIL, USER_NAME, USER_AGE, USER_PHONE, USER_ADDRESS
		FROM TBL_USER
		WHERE USER_EMAIL = #{userEmail} AND USER_PASSWORD = #{userPassword}
	</select>
	
	<select id="selectIdByUserEmail" parameterType="String" resultType="Long">
		SELECT ID
		FROM TBL_USER
		WHERE USER_EMAIL = #{userEmail}
	</select>










</mapper>