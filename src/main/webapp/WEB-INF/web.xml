<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>practice</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <!-- 기업 -->
  <servlet>
  	<servlet-name>CompanyFrontController</servlet-name>
  	<servlet-class>com.app.company.CompanyFrontController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CompanyFrontController</servlet-name>
  	<url-pattern>*.company</url-pattern>
  </servlet-mapping>
  <!-- 유저 -->
  <servlet>
  	<servlet-name>UserFrontController</servlet-name>
  	<servlet-class>com.app.user.UserFrontController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UserFrontController</servlet-name>
  	<url-pattern>*.user</url-pattern>
  </servlet-mapping>
  <!-- 상품 -->
  <servlet>
  	<servlet-name>ProductFrontController</servlet-name>
  	<servlet-class>com.app.product.ProductFrontController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>ProductFrontController</servlet-name>
  	<url-pattern>*.product</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>CardFrontController</servlet-name>
  	<servlet-class>com.app.card.CardFrontController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CardFrontController</servlet-name>
  	<url-pattern>*.card</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>OrderFrontController</servlet-name>
  	<servlet-class>com.app.order.OrderFrontController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>OrderFrontController</servlet-name>
  	<url-pattern>*.order</url-pattern>
  </servlet-mapping>
  
  
  <!-- 메인 -->
   	<servlet>
 		<servlet-name>main</servlet-name>
 		<jsp-file>/main.jsp</jsp-file>
  	</servlet>
  	
  	<servlet-mapping>
  		<servlet-name>main</servlet-name>
  		<url-pattern>/</url-pattern>
  	</servlet-mapping>

</web-app>